{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
      ],
      "headers": [{
        "source":"**",
        "headers": [
          {"key":"Content-Security-Policy","value":"script-src 'self' *.firebaseapp.com *.twitch.tv"}
        ]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
